extends ../base.pug

block content
    div#userProfile-wrapper 
        include userProfile_nav.pug

        div#userProfile
            div#userProfile-image
                h3 프로필 사진
                img(src="/" + user.avatarUrl).user-avatar 
            div#userProfile-username 
                h3 아이디
                textarea(readonly) #{user.username}
            div#userProfile-name 
                h3 이름
                textarea(readonly) #{user.name}
            div#userProfile-nickname 
                h3 닉네임
                textarea(readonly) #{user.nickname}
            div#userProfile-email 
                h3 이메일
                textarea(readonly) #{user.email}
            div#userProfile-socialAccount 
                h3 소셜 계정 여부
                textarea(readonly) #{user.socialAccount === true ? "Y" : "N"}
            div#userProfile-incomes 
                h3 가계부에 등록한 수입 내역 수
                textarea(readonly) #{user.incomeList.length}
            div#userProfile-expenses
                h3 가계부에 등록한 지출 내역 수
                textarea(readonly) #{user.expenseList.length}
            div#userProfile-posts
                h3 작성한 글 수
                textarea(readonly) #{user.postList.length}
            div#userProfile- 
                h3 작성한 댓글 수
                textarea(readonly) #{user.commentList.length}
            div#userProfile- 
                h3 마지막 접속 기록
                textarea(readonly) #{lastLoggedInDate}

        if isMyProfile 
            div#userProfile-options
                a(href=`/user/edit-profile`) 프로필 수정하기
                a(href=`/user/edit-password`) 비밀번호 변경하기
