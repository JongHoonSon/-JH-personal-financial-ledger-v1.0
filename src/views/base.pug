include modal/flash-message/flash-message.pug

doctype html
html(lang="ko")
    head 
        title #{pageTitle} | PFL
        link(rel="stylesheet", href="/assets/css/styles.min.css")
        link(rel="icon" type="image/x-icon" href="/defaults/images/favicon.ico")
    body 
        if messages
            if messages.info
                +message("info", messages.info)
            if messages.success
                +message("success", messages.success)
            if messages.error                     
                +message("error", messages.error)
        block components
            include partials/header.pug
            div#middle
                include partials/nav.pug
                include partials/main.pug
            include partials/footer.pug
    script(src="/assets/js/common/nav.min.js") 
    script(src="https://kit.fontawesome.com/4bc00e0a4c.js" crossorigin="anonymous")
    block scripts