extends ../base.pug
include board-list-post-mixins.pug

block content
    div#board__wrap
        div#board-nav__wrap
            div.board-nav
                a(href=`/board/전체게시판/1`).board-nav__link 전체게시판
            each boardName in boardList 
                div.board-nav
                    a(href=`/board/${boardName}/1`).board-nav__link #{boardName}

        div#board-header
            div.board-header__seq 글 번호
            div.board-header__board-name 게시판
            div.board-header__title 제목
            div.board-header__owner-name 글쓴이
            div.board-header__views 조회수
            div.board-header__stringDate 작성일

        div#board-contents 
            if emptyFlag === true
                div#board-empty
                    span 아직 '#{boardName}' 탭에 작성된 글이 없습니다.
            else 
                ul#post-list
                    each post in postList
                        +list(post)

        include board-pagination.pug

        div#board-options
            button
                a(href="/post/add") 글 쓰기

block scripts 
    script(src="/assets/js/pager.js") 