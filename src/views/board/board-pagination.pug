div#board-pagination(data-curr_page_num=currPageNum, data-last_page_num=lastPageNum)
    // 앞 페이지로 이동하는 버튼 표시
    div#board-pagination__prev-page-button__wrap
        a(href=`/board/${selectedBoardName}/${currPageNum-1}`)#board-pagination__prev-page-button
            i.fa-solid.fa-chevron-left

    div#board-pagination__page-buttons__wrap
        // 현재 페이지와 첫 페이지의 페이지 수 차이가 4이상일 경우
        // 첫 페이지로 이동하는 버튼 표시
        if currPageNum-firstPageNum > 3  
            div.board-pagination__page-button__wrap
                a(href=`/board/${selectedBoardName}/${firstPageNum}`).board-pagination__page-button #{firstPageNum}
            div.board-pagination__ellipsis #{`...`}

        // 현재 페이지보다 3페이지 앞의 페이지까지
        // 각 페이지로 이동하는 버튼 표시
        -for (var i = 3; i > 0; i--)
            if currPageNum-i > 0
                div.board-pagination__page-button__wrap
                    a(href=`/board/${selectedBoardName}/${currPageNum-i}`).board-pagination__page-button #{currPageNum-i}

        // 현재 페이지
        div.board-pagination__page-button__wrap.board-pagination__current-page-button__wrap
            a(href=`/board/${selectedBoardName}/${currPageNum}`).board-pagination__page-button#board-pagination__current-page-button #{currPageNum}

        // 현재 페이지보다 3페이지 뒤의 페이지까지
        // 각 페이지로 이동하는 버튼 표시
        -for (var j = 1; j < 4; j++)
            if currPageNum+j < lastPageNum+1
                div.board-pagination__page-button__wrap
                    a(href=`/board/${selectedBoardName}/${currPageNum+j}`).board-pagination__page-button #{currPageNum+j}

        // 현재 페이지와 마지막 페이지의 페이지 수 차이가 4이상일 경우
        // 마지막 페이지로 이동하는 버튼 표시
        if lastPageNum-currPageNum > 3  
            div.board-pagination__ellipsis #{`...`}
            div.board-pagination__page-button__wrap
                a(href=`/board/${selectedBoardName}/${lastPageNum}`).board-pagination__page-button #{lastPageNum}

    // 뒷 페이지로 이동하는 버튼 표시
    div#board-pagination__next-page-button__wrap
        a(href=`/board/${selectedBoardName}/${currPageNum+1}`)#board-pagination__next-page-button
            i.fa-solid.fa-chevron-right