extends ../base.pug

block content
    div.form-wrapper
            form(method="POST")
                div.form-input-section
                    div
                        label(for="title") 제목
                        input(placeholder="제목", id="title", name="title", type="text", required)
                    div
                        label(for="category") 카테고리
                        select(id="category", name="category", required)
                            each boardName in boardList
                                option(value=`${boardName}`)=boardName
                    div 
                        label(for="content") 내용
                        textarea(placeholder="내용", id="content", name="content", type="text", required)
                div.form-button-section
                    input(type="submit", value="작성하기")