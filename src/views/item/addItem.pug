extends ../base.pug

block content 
    div#addItem-wrapper
        include addItem_nav.pug

        div(class=`${itemType === "i" ? 'incomeBgColor' : 'expenseBgColor'}`).form-wrapper
            form(method="POST", enctype="multipart/form-data")
                div.form-input-section
                    div
                        label(for="date") 날짜
                        input(placeholder="YYYY", id="date", name="date", type="date", required)
                        span 년
                    div
                        label(for="amount") 금액
                        input(placeholder="amount", id="amount", name="amount", type="text", required)
                        span 원
                    div 
                        label(for="category") 분류
                        select(id="category", name="category", required)
                            if itemType === "i"
                                each category of incomeCategories
                                    option(value=`${category}`) #{category}
                            else 
                                each category of expenseCategories
                                    option(value=`${category}`) #{category}
                        a(href="/user/add/category") 추가


                    div 
                        label(for="description") 설명
                        input(placeholder="description", id="description", name="description", type="text")
                    div 
                        label(for="cycle") 주기
                        select(id="cycle", name="cycle", required)
                            option(value="정기성") 정기성
                            option(value="일회성") 일회성
                    if itemType === "e"
                        div 
                            label(for="paymentMethod") 지불 방식 
                            select(id="paymentMethod", name="paymentMethod", required)
                                option(value="신용카드") 신용카드
                                option(value="체크카드") 체크카드
                                option(value="현금") 현금
                    div
                        label 사진
                        img(src="/defaults/empty_image.png").item-image.image-preview
                    div 
                        label(for="image") 사진
                        input(type="file", id="image", name="image", accept="image/*" data-id="defaults/empty_image.png").image-upload
                div.form-button-section
                    input(type="submit", value="추가하기")

block scripts
    script(src="/assets/js/imagePreview.js") 