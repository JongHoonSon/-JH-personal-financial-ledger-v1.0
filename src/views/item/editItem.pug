extends ../base.pug

block content 
    div#editItem-wrapper
        div(class=`${item.type === "i" ? 'incomeBgColor' : 'expenseBgColor'}`).form-wrapper
            form(method="POST", enctype="multipart/form-data")
                div.form-input-section
                    div
                        label(for="date") 날짜
                        input(placeholder="YYYY", id="date", name="date", type="date", value=`${itemStringDate}` required)
                        span 년
                    div
                        label(for="amount") 금액
                        input(placeholder="amount", id="amount", name="amount", type="text", value=`${item.amount}` required)
                        span 원
                    div 
                        label(for="category") 분류
                        select(id="category", name="category", value=`${item.category}` required)
                            if item.type === "i"
                                option(value="월급") 월급
                                option(value="주급") 주급
                                option(value="용돈") 용돈
                                option(value="은행이자") 은행이자
                                option(value="주식이윤") 주식이윤
                                option(value="기타") 기타
                            if item.type === "e"
                                option(value="주거비") 주거비
                                option(value="통신비") 통신비
                                option(value="교통비") 교통비
                                option(value="의료비") 의료비
                                option(value="생활비") 생활비
                                option(value="의류비") 의류비
                                option(value="교육비") 교육비
                                option(value="주식거래") 주식거래
                                option(value="주식손해") 주식손해
                                option(value="기타") 기타
                    div 
                        label(for="description") 설명
                        input(placeholder="description", id="description", name="description", value=`${item.description}` type="text")
                    div 
                        label(for="cycle") 주기
                        select(id="cycle", name="cycle", value=`${item.cycle}` required)
                            option(value="정기성") 정기성
                            option(value="일회성") 일회성

                    if item.type === "e"
                        div 
                            label(for="paymentMethod") 지불 방식
                            select(id="paymentMethod", name="paymentMethod", value=`${item.paymentMethod}` required)
                                option(value="신용카드") 신용카드
                                option(value="체크카드") 체크카드
                                option(value="현금") 현금
                    div
                        if item.imageUrl !== ""
                            img(src='/' + item.imageUrl).item-image
                    div 
                        label(for="image") 사진
                        input(type="file", id="image", name="image", accept="image/*")
                div.form-button-section
                    input(type="submit", value="수정하기")